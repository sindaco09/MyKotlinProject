<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/black"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/header"
        android:weightSum="4"
        android:alpha=".8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/flip_camera_container"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ripple_grey"

            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:id="@+id/flip_camera"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera_front_black_24dp"
                android:tint="@android:color/white"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </FrameLayout>



    </LinearLayout>

    <com.stefan.mykotlinproject.Views.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_below="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="5dp"
        android:background="#000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorSecondaryLight"
            android:src="@drawable/ic_camera_black_24dp"/>

        <ImageButton
            android:id="@+id/info"
            android:contentDescription="@string/description_info"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:tint="@android:color/white"
            android:src="@drawable/ic_info_outline_black_24dp" />

    </FrameLayout>

</RelativeLayout>